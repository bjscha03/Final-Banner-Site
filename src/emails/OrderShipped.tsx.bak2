  trackingUrl?: string;
  carrier?: string;
}

export default function OrderShipped({ order, trackingNumber, trackingUrl, carrier = 'FedEx' }: OrderShippedProps) {
  const shipDate = new Date().toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
